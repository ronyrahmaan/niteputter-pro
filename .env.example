# NitePutter Pro Environment Variables
# Copy this file to .env and fill in your actual values

# Application
APP_NAME="NitePutter Pro"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT="production"

# Server
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Database
MONGODB_URL="mongodb://localhost:27017"
DATABASE_NAME="niteputter_pro"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET_KEY="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET_KEY="your-super-secret-refresh-key-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Configuration (Get your keys from Stripe Dashboard)
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
STRIPE_SUCCESS_URL="http://localhost:3000/checkout/success"
STRIPE_CANCEL_URL="http://localhost:3000/checkout/cancel"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"
SMTP_USE_TLS=True
EMAIL_FROM="noreply@niteputterpro.com"
EMAIL_FROM_NAME="NitePutter Pro"

# Security
SECRET_KEY="your-application-secret-key-change-in-production"
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,https://niteputterpro.com"

# URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL="INFO"
LOG_FILE="/var/log/niteputter/app.log"

# Features
ENABLE_REVIEWS=True
ENABLE_WISHLIST=True
ENABLE_GUEST_CHECKOUT=True
ENABLE_COUPONS=True

# Inventory
LOW_STOCK_THRESHOLD=10
RESERVE_STOCK_MINUTES=15

# Cart
CART_EXPIRY_DAYS=30
ABANDONED_CART_HOURS=1

# Order
ORDER_NUMBER_PREFIX="NPP"

# Tax
ENABLE_TAX_CALCULATION=True
DEFAULT_TAX_RATE=0.0875

# Shipping
DEFAULT_SHIPPING_RATE=9.99
FREE_SHIPPING_THRESHOLD=100.00