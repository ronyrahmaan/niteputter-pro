# Nite Putter Pro - Environment Configuration Template
# Copy to .env and configure with actual values
# NEVER commit .env files containing real secrets to version control

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/niteputter
MONGODB_TEST_URL=mongodb://localhost:27017/niteputter_test
MONGO_URL=mongodb://localhost:27017
DB_NAME=niteputter

# Authentication Security
# Generate secure JWT secret: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=REPLACE_WITH_SECURE_64_CHARACTER_RANDOM_STRING
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api
PROJECT_NAME=Nite Putter Pro API
VERSION=1.0.0

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
ALLOWED_HOSTS=localhost,127.0.0.1

# Stripe Payment Integration
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_test_YOUR_TEST_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Email Configuration (Optional - for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@niteputter.com
SUPER_ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD