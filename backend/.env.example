# NitePutter Pro Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="NitePutter Pro"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# MongoDB Configuration
# Local MongoDB
MONGODB_URL=mongodb://localhost:27017
# MongoDB Atlas (Production)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=niteputter_pro
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# Redis Configuration
# Local Redis
REDIS_URL=redis://localhost:6379
# Redis Cloud (Production)
# REDIS_URL=redis://default:password@redis-cloud-endpoint:port
REDIS_DB=0
REDIS_DECODE_RESPONSES=true
REDIS_MAX_CONNECTIONS=50

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=orders@niteputter.com
SUPPORT_EMAIL=support@niteputter.com
ADMIN_EMAIL=admin@niteputter.com
EMAIL_TEMPLATES_DIR=./email_templates

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=AKIA_your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET_NAME=niteputter-products
AWS_S3_REGION=us-east-1
AWS_S3_CDN_URL=https://cdn.niteputter.com
AWS_S3_MAX_FILE_SIZE=10485760  # 10MB in bytes

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/niteputter.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_CHECKOUT=10/minute

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key
SESSION_COOKIE_NAME=niteputter_session
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
SESSION_EXPIRE_HOURS=24

# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-XXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
FEATURE_REVIEWS=true
FEATURE_WISHLIST=true
FEATURE_COUPONS=true
FEATURE_NEWSLETTER=true
FEATURE_SOCIAL_LOGIN=false

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Settings (seconds)
CACHE_PRODUCT_TTL=3600  # 1 hour
CACHE_CATEGORY_TTL=7200  # 2 hours
CACHE_USER_TTL=1800  # 30 minutes

# Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External APIs
SHIPPING_API_KEY=your_shipping_api_key
SHIPPING_API_URL=https://api.shipping-provider.com
TAX_API_KEY=your_tax_api_key
TAX_API_URL=https://api.tax-provider.com

# Development Settings
DEV_ADMIN_EMAIL=admin@niteputterpro.com
DEV_ADMIN_PASSWORD=AdminPass123!

# Testing
TEST_DATABASE_NAME=niteputter_test
TEST_REDIS_DB=15